<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Title of App"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:id="@+id/space0"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/flashcard1"
                android:layout_width="375dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/holo_blue_light"
                android:drawableEnd="@drawable/flashcard"
                android:drawableRight="@drawable/flashcard"
                android:gravity="center"
                android:text="@string/flashcards"
                android:textSize="34sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/flashcard2"
                android:layout_width="375dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="@string/flashcardText"
                android:textSize="24sp" />

            <Space
                android:id="@+id/space1"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/quiz1"
                android:layout_width="375dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/holo_blue_light"
                android:drawableEnd="@drawable/quiz"
                android:drawableRight="@drawable/quiz"
                android:gravity="center"
                android:text="@string/quiz"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/quiz2"
                android:layout_width="375dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="@string/quizText"
                android:textSize="24sp" />

            <Space
                android:id="@+id/space2"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/video1"
                android:layout_width="375dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/holo_blue_light"
                android:drawableEnd="@drawable/video"
                android:drawableRight="@drawable/video"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="@string/videos"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/video2"
                android:layout_width="375dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="@string/videoText"
                android:textSize="24sp" />

            <Space
                android:id="@+id/space3"
                android:layout_height="40dp"
                android:layout_width="0dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/homebutton"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_gravity="end"
        android:onClick="..."
        android:text="@string/home"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/leaderboardbutton"
        android:layout_width="142dp"
        android:layout_height="65dp"
        android:onClick="..."
        android:text="@string/leaderboard"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toEndOf="@id/profilebutton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/profilebutton"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_gravity="start"
        android:onClick="..."
        android:text="@string/profile"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>